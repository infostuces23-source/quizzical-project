<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/md_theme_primary"
                android:centerColor="@color/md_theme_primary_container"
                android:endColor="@color/md_theme_tertiary"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Logo transparent -->
    <item>
        <bitmap
            android:src="@drawable/quizzical_logo_transparent"
            android:gravity="center" />
    </item>
</layer-list>

